<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="#home">Home</a>
      <a href="#news">News</a>
      <a href="#contact">Contact</a>
      <a href="#about">About</a>
    </div>
    <!--Form to add new book (title, description, price, author, sale_percent, stock)-->
    <div class="form-book-create" style="outline: 1px solid black">
      <form action="books/" method="POST" enctype="multipart/form-data">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" />
        <br />
        <label for="description">Description:</label>
        <input type="text" id="description" name="description" />
        <br />
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" />
        <br />
        <label for="author">Author:</label>
        <input type="text" id="author" name="author" />
        <br />
        <label for="stock">Stock:</label>
        <input type="number" id="stock" name="stock" />
        <br />
        <label for="thumbnail">Thumbnail:</label>
        <input type="file" id="thumbnail" name="thumbnail" />
        <br />
        <label for="otherImages">Other Images:</label>
        <input type="file" id="otherImages" name="otherImages" multiple />
        <br />
        <button type="submit">Create Book</button>
      </form>
    </div>
    <br />
    <!-- Form for register -->
    <div class="form-register" style="outline: 1px solid black">
      <form action="customers" method="POST">
        <label for="email">email:</label>
        <input type="text" id="email" name="email" />
        <br />
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" />
        <br />
        <button type="submit">Register</button>
      </form>
    </div>
    <br />
    <!-- Form to create new article -->
    <div class="form-article-create" style="outline: 1px solid black">
      <form action="articles" method="POST" enctype="multipart/form-data">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" />
        <br />
        <label for="content">Content:</label>
        <input type="text" id="content" name="content" />
        <br />
        <input type="file" id="image" name="image" />
        <button type="submit">Create Article</button>
      </form>
    </div>
    <br />
    <!-- Form to log in -->
    <div class="form-login" style="outline: 1px solid black">
      <form action="login" method="POST">
        <label for="email">email:</label>
        <input type="text" id="email" name="email" />
        <br />
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" />
        <br />
        <button type="submit">Login</button>
      </form>
    </div>
  </body>
</html>
